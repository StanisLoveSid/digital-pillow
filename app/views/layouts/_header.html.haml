%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left.ml-15{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Bookstore', root_path, class: 'navbar-brand'
      = link_to cart_path, class: "shop-link pull-right visible-xs" do
        %span.shop-icon
          %span.shop-quantity= current_order.order_items.count
    = link_to cart_path, class: "shop-link pull-right hidden-xs" do
      %span.shop-icon
        %span.shop-quantity= current_order.order_items.count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      = render "layouts/nav_mobile"
      = render "layouts/navbar"
